
@model _1_Library_Model.Models.Login_Model

<div class="bg-white">
    <div id="layoutAuthentication">
        <div id="layoutAuthentication_content">
            <main>
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-5">
                            <div class="card shadow-lg border-0 rounded-lg mt-5">
                                <div class="card-header"><h3 class="text-center font-weight-light my-4">Login</h3></div>
                                <div class="card-body">
                                    @using (Html.BeginForm("CheckAuthentication", "Login_", FormMethod.Post))
                                    {
                                        <div class="form-floating mb-3">
                                            @Html.TextBoxFor(m => m.Login_Email, new { @class = "form-control", id = "inputEmail" })
                                            <label for="inputEmail">Email address</label>
                                            @Html.ValidationMessageFor(m => m.Login_Email, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="form-floating mb-3">
                                            @Html.PasswordFor(m => m.Login_Password, new { @class = "form-control", id = "inputPassword" })
                                            <label for="inputPassword">Password</label>
                                            @Html.ValidationMessageFor(m => m.Login_Password, "", new { @class = "text-danger" })
                                        </div>
                                        <button class="btn btn-primary" type="submit">Login</button>
                                    }
                                    @if (TempData["ErrorMessage"] != null)
                                    {
                                        <script>alert('@TempData["ErrorMessage"]');</script>
                                    }

                                    </form>
                                    
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>

</div>


